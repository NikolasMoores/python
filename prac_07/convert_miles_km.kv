BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            multiline: False
            on_text: app.convert_miles(input_miles.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, int(1))
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, int(-1))

    #Button:
    #    text: 'Convert miles to km'
    #    on_press: app.convert_miles(input_miles.text)
    Label:
        text: ''
        id: output_label
